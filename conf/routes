# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#sent coordinates to Controller

GET		/selectCell/:row/:col			controllers.Application.selectCell(row : Int, col:Int)

#redraw

GET		/redo/:size/:theme			controllers.Application.redo(size : Int, theme: String)

#reset

GET		/reset					controllers.Application.reset()

#solve

GET		/solve					controllers.Application.solve()

#resize

GET		/resize/:size				controllers.Application.resize(size:Int)

#newTheme

GET		/changeTheme/:stringTheme			controllers.Application.changeTheme(stringTheme:String)